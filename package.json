{
  "name": "dinovel.vscode",
  "displayName": "Dinovel",
  "description": "Dinovel development tools for VSCode",
  "author": {
    "name": "Dinovel",
    "url": "https://dinovel.io"
  },
  "publisher": "Dinovel",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dinovel.runCommand",
        "title": "Dinovel: Interactive command"
      },
      {
        "command": "dinovel.reloadAssets",
        "title": "Dinovel: Reload assets",
        "icon": "$(refresh)"
      }
    ],
    "configuration": {
      "title": "Dinovel",
      "properties": {
        "dinovel.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Show/Hide Dinovel components"
        },
        "dinovel.status": {
          "type": "boolean",
          "default": true,
          "description": "Show/Hide Dinovel status bar item"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dinovel-view",
          "title": "Dinovel",
          "icon": "./icons/dinovel.svg"
        }
      ]
    },
    "views": {
      "dinovel-view": [
        {
          "id": "dinovel-assets",
          "contextualTitle": "Dinovel: Assets",
          "name": "Assets",
          "visibility": "visible",
          "when": "config.dinovel.enabled && workspaceFolderCount > 0"
        },
        {
          "id": "dinovel-resources",
          "contextualTitle": "Dinovel: Resources",
          "name": "Resources",
          "visibility": "collapsed",
          "when": "config.dinovel.enabled && workspaceFolderCount > 0"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "dinovel.reloadAssets",
          "group": "navigation",
          "when": "view == dinovel-assets"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.69.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.4",
    "@vscode/test-electron": "^2.1.3"
  }
}
